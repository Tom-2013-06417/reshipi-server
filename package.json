{
  "name": "reshipi-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "nodemon",
    "start:prod": "nodemon ./dist/server.js",
    "prod": "npm run build && npm run start:prod"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node ./src/server.ts",
    "ext": "ts"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mongoose": "^5.4.19"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "nodemon": "^1.18.10",
    "ts-node": "^8.6.1",
    "typescript": "^3.0.0"
  }
}
